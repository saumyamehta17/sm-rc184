<%= semantic_form_for(@comment) do |f| %>
  <%= f.inputs do %>
        <%= f.input :name %>
        <%= f.input :priority , as: :radio, label: 'Gender' , collection: [['Female',true],['Male',false]]%>
        <%= f.input :verfy_date , include_blank: false , start_year: 1900 %>
        <%= f.input :post , include_blank: false %>
  <% end %>
  <%= f.actions %>
<% end %>
